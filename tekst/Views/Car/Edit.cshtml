@model tekst.Models.Car

<h2>Edytuj samochód</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Make" class="control-label">Marka</label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Rok</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DailyPrice" class="control-label">Cena za dzień</label>
        <input asp-for="DailyPrice" class="form-control" />
        <span asp-validation-for="DailyPrice" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Wróć do listy</a>
